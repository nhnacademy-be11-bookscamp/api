{
  "settings": {
    "analysis": {
      "tokenizer": {
        "nori_tokenizer": {
          "type": "nori_tokenizer"
        }
      },
      "analyzer": {
        "korean_analyzer": {
          "type": "custom",
          "tokenizer": "nori_tokenizer",
          "filter": ["lowercase", "synonym_filter"]
        }
      },
      "filter": {
        "synonym_filter": {
          "type": "synonym",
          "synonyms": [
            "아기, 유아",
            "학생, 제자",
            "구입, 구매",
            "예쁜, 아름다운",
            "슬픈, 우울한",
            "기질, 특성",
            "LA, 로스엔젤레스",
            "JAVA, 자바",
            "DB, 데이터베이스"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": { "type": "long" },
      "title": { "type": "text", "analyzer": "korean_analyzer"},
      "contributors": { "type": "text", "analyzer": "korean_analyzer" },
      "explanation": { "type": "text", "analyzer": "korean_analyzer" },
      "content": { "type": "text", "analyzer": "korean_analyzer" },
      "publisher": { "type": "text", "analyzer": "korean_analyzer" },
      "category": { "type": "keyword" },
      "isbn": { "type": "keyword" },
      "packable": { "type": "boolean" },
      "regularPrice": { "type": "integer" },
      "salePrice": { "type": "integer" },
      "stock": { "type": "integer" },
      "viewCount": { "type": "long" },
      "status": { "type": "keyword" },
      "averageRating": { "type": "float" },
      "reviewCount": { "type": "long" },
      "publishDate": {
        "type": "date",
        "format": "strict_date_optional_time||yyyy-MM-dd"
      },

      "bookVector": {
        "type": "dense_vector",
        "dims": 1024,
        "index": true,
        "similarity": "cosine"
      }
    }
  }
}
