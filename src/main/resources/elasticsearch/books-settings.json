{
  "settings": {
    "analysis": {
      "filter": {
        "korean_synonym_filter": {
          "type": "synonym",
          "synonyms": [
            "아기, 유아",
            "학생, 제자",
            "구입, 구매",
            "예쁜, 아름다운",
            "슬픈, 우울한",
            "기질, 특성",
            "LA, 로스엔젤레스",
            "자바, JAVA"
          ]
        }
      },
      "analyzer": {
        "korean_synonym": {
          "type": "custom",
          "tokenizer": "nori_tokenizer",
          "filter": ["lowercase", "korean_synonym_filter"]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": { "type": "long" },
      "title": { "type": "text", "analyzer": "korean_synonym" },
      "contributors": { "type": "text", "analyzer": "korean_synonym" },
      "tags": { "type": "text", "analyzer": "korean_synonym" },
      "isbn": { "type": "keyword" },
      "publisher": { "type": "text", "analyzer": "korean_synonym" },
      "explanation": { "type": "text", "analyzer": "korean_synonym" },
      "reviews": { "type": "text", "analyzer": "korean_synonym" },
      "regularPrice": { "type": "integer" },
      "salePrice": { "type": "integer" },
      "viewCount": { "type": "long" },
      "averageRating": { "type": "double" },
      "reviewCount": { "type": "long" },
      "publishDate": { "type": "date" ,"format": "strict_date_optional_time||epoch_millis"}
    }
  }
}
